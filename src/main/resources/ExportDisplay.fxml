<?import javafx.scene.text.TextFlow?>
<GridPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ExportDisplayController">
    <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>
    <ListView fx:id="sourcesDisplayList" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Button fx:id="clipboardButton" onAction="#copyText" alignment="CENTER" text="Copy to Clipboard" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1">
      <GridPane.margin>
         <Insets bottom="5.0" top="5.0" />
      </GridPane.margin></Button>
    <Button fx:id="exitButton" onAction="#exit" alignment="CENTER" text="Exit" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
